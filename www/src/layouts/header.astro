---
import { RichText } from "@evex-ui";
import { HeaderMenu } from "@/components/headerMenu.tsx";
---

<header
  class="fixed z-50 top-0 left-0 right-0 w-screen h-16 flex justify-between items-center backdrop-blur-sm px-10 border-b border-white/20"
>
  <div class="w-[150px] lg:w-[325px]">
    <img src="/logo.png" class="h-12 dark:hidden" alt="Evex Logo" />
    <img src="/logo-dark.png" class="h-12 hidden dark:block" alt="Evex Logo" />
  </div>
  <div class="hidden md:flex justify-center w-full">
    <div class="flex justify-center items-center gap-x-10">
      <div>
        <RichText> Docs </RichText>
      </div>
      <div>
        <RichText> Components </RichText>
      </div>
      <div>
        <RichText> Template </RichText>
      </div>
      <div>
        <RichText> Showcase </RichText>
      </div>
    </div>
  </div>
  <div
    class="hidden md:flex justify-center items-center gap-x-4 w-[150px] lg:w-[325px] h-full"
  >
    <a href="https://github.com/evex-dev/evex-ui" target="_blank">
      <div
        class="hidden lg:flex justify-center items-center gap-x-2 text-nowrap border border-white/20 rounded-full py-2 px-5 hover:bg-white/[0.01] transition-colors"
      >
        Star on <img
          src="/icons/github.svg"
          class="dark:invert"
          width="18"
          height="18"
          alt="github"
        />
      </div>
    </a>
    <a href="https://github.com/evex-dev/evex-ui" target="_blank">
      <img
        src="/icons/github.svg"
        class="hidden md:block lg:hidden dark:invert"
        width="18"
        height="18"
        alt="x"
      />
    </a>
    <a href="https://x.com/amex2189" target="_blank">
      <img
        src="/icons/x.svg"
        class="dark:invert"
        width="18"
        height="18"
        alt="x"
      />
    </a>
    <a href="https://evex.land" target="_blank">
      <img
        src="/icons/discord.svg"
        class="dark:invert"
        width="18"
        height="18"
        alt="discord"
      />
    </a>
  </div>
  <div class="flex md:hidden justify-center items-center">
    <HeaderMenu client:load />
  </div>
</header>

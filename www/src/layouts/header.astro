---
import { RichText } from "@evex-ui";
import { HeaderMenu } from "@/components/headerMenu.tsx";
---
<header class="fixed z-50 top-0 left-0 right-0 w-screen h-16 flex justify-between items-center backdrop-blur-sm px-10 border-b border-white/20">
    <img src="/logo.png" class="h-12" alt="Evex Logo" />
    <div class="hidden md:flex justify-center w-full">
        <div class="flex justify-center items-center gap-x-10">
            <div>
                <RichText>
                    Documentation
                </RichText>
            </div>
            <div>
                <RichText>
                    Components
                </RichText>
            </div>
            <div>
                <RichText>
                    Showcase
                </RichText>
            </div>
        </div>
    </div>
    <div class="hidden md:flex justify-center items-center gap-x-4 min-w-[120px]">
        <a href="https://github.com/evex-dev/evex-ui" target="_blank">
            <img src="/icons/github.svg" width="18" height="18" alt="github" />
        </a>
        <a href="https://x.com/amex2189" target="_blank">
            <img src="/icons/x.svg" width="18" height="18" alt="x" />
        </a>
        <a href="https://evex.land" target="_blank">
            <img src="/icons/discord.svg" width="18" height="18" alt="discord" />
        </a>
    </div>
    <div class="flex md:hidden justify-center items-center">
        <HeaderMenu client:load />
    </div>
</header>